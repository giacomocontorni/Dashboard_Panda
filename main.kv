<SplashScreen>:
    name: 'pagina1'
    Video:
        id: pagina1
        source: 'car.mp4'
        state: 'play'
        options: {'eos': 'stop'}
        allow_stretch: True
        keep_ratio: True
        on_loaded:
            print("Video caricato")
            self.state = 'play'
        on_eos:
            print("Video terminato")
            app.root.current = 'pagina2'

<ToolBar>:
    name: 'pagina2'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1
        pos_hint: {'center_x': 0.5, 'y': 0}  # Centrato orizzontalmente in basso
        spacing: 1
        corner_radius: 5
        # Definisce un bottone
        Button:
            text: 'Torna alla Pagina 1'
            on_press: app.root.current = 'pagina1'
        ToggleButton:
            text: "OFF"
            on_state:
                self.text = "ON" if self.state == "down" else "OFF"
            # ID che serve per accedere al bottone dal codice Python
            id: tool1
            # Dimensione del font del testo
